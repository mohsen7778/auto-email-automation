# ── Copy this file to .env and fill in your values ──────────────────────────

# ── Telegram ──────────────────────────────────────────────────────────────────
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated Telegram user IDs allowed to use the bot
# Find your ID by messaging @userinfobot
ADMIN_CHAT_IDS=123456789,987654321

# ── MongoDB Atlas ─────────────────────────────────────────────────────────────
# Connection string from Atlas → Connect → Drivers
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB_NAME=cold_email_bot

# ── Brevo (Sendinblue) ────────────────────────────────────────────────────────
# API key from Brevo → SMTP & API → API Keys
BREVO_API_KEY=your_brevo_api_key_here

# The "From" name and email shown in sent emails
SENDER_NAME=Your Company Name
SENDER_EMAIL=outreach@yourdomain.com

# ── Email sending behaviour ───────────────────────────────────────────────────
# Seconds of random delay between each email (anti-spam)
SEND_DELAY_MIN=2
SEND_DELAY_MAX=5

# Max emails to send per day across all niches
DAILY_SEND_LIMIT=100

# How many times to retry a failed email before giving up
MAX_RETRIES=3

# ── App ───────────────────────────────────────────────────────────────────────
PORT=8000
LOG_LEVEL=INFO
